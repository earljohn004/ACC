#ifndef Panel_h
#define Panel_h

#define LCDMAX 16
#define LCDROW1 0
#define LCDROW2 1

#include <LiquidCrystal_I2C.h>
#include <millisDelay.h>

class Panel{

  private:
    struct panel_{
      char * message1;
      char * message2;
      int delay;
    }; 
    
    public:
        typedef struct panel_ PANEL;
        Panel(int size);
        void add(char* row1message, char* row2message, int delay, int index);
        void run(LiquidCrystal_I2C &lcd, millisDelay &mdelay);

    private:
        PANEL *privatePanel_;
        void setDisplay(char* message, int row, LiquidCrystal_I2C &lcd);
        int size_;
        bool *displayEnable_;
        void setEnablePermission(int currentIndex);
        
        
};

#endif
